    stripe-core >=2.2 && <2.3,
    stripe-haskell >=2.2 && <2.3,
    text >=1.2 && <1.3,
    time >=1.6 && <1.7,
    wai >=3.2 && <3.3,
    wai-extra >=3.0 && <3.1,
    resource-pool >=0.2 && <0.3,
    warp >=3.2 && <3.3

executable books
  main-is:             Main.hs
  ghc-options:
    -Wall
    -threaded
  hs-source-dirs:      webservice
  default-language:    Haskell2010
  other-modules:
    Server
  build-depends:
    aeson >=1.0 && <1.3,
    async >=2.1 && <2.2,
    base >=4.9 && <4.10,
    bytestring >=0.10 && <0.11,
    directory >=1.2 && <1.3,
