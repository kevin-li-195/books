  main-is:             Main.hs
  default-language:    Haskell2010
  hs-source-dirs:      renew
  build-depends:
    aeson >=1.0 && <1.3,
    bytestring >=0.10 && <0.11,
    base >=4.9 && <4.10,
    postgresql-simple >=0.5 && <0.6,
    text >=1.2 && <1.3,
    books

