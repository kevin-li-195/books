    postgresql-simple >=0.5 && <0.6,
    process >=1.4 && <1.5,
    servant >=0.10 && <0.11,
    servant-server >=0.10 && <0.11,
    smtp-mail >=0.1.4.6 && <0.2,
    stripe-core >=2.2 && <2.3,
    stripe-haskell >=2.2 && <2.3,
    text >=1.2 && <1.3,
    time >=1.6 && <1.7,
    wai >=3.2 && <3.3,
    wai-extra >=3.0 && <3.1,
    warp >=3.2 && <3.3,
